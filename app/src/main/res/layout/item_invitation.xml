<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_weight="0.94"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/my_white"
            app:srcCompat="@mipmap/ic_mail_black_24dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/my_white"
            android:text="FROM:"
            android:textAlignment="center"
            android:textSize="8sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_toEndOf="@+id/item_invitation_from"
            android:text="GROUP:"
            android:textAlignment="center"
            android:textSize="8sp"
            android:textStyle="bold|italic"
            android:textColor="@color/my_white"/>

        <TextView
            android:id="@+id/item_invitation_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:text="Oda Humlung"
            android:textStyle="bold"
            android:textColor="@color/my_white"/>

        <TextView
            android:id="@+id/item_invitation_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_invitation_from"
            android:layout_alignBottom="@+id/item_invitation_from"
            android:layout_alignStart="@+id/textView6"
            android:text="Friends"
            android:textStyle="bold"
            android:textColor="@color/my_white"/>
    </RelativeLayout>
</LinearLayout>