<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_profile">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/my_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="text_info">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/profile_icons</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/profile_icons</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/my_white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
</resources>
